<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="16dp"
        android:layout_marginVertical="6dp">
        <ImageView
            android:id="@+id/product_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/product_kategori1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Category:"
            android:layout_toRightOf="@+id/product_img"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/black"
            android:id="@+id/product_kategori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mat"
            android:layout_toRightOf="@+id/product_kategori1"
            android:layout_marginStart="8sp"/>
        <TextView
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/product_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Product:"
            android:layout_toRightOf="@+id/product_img"
            android:layout_below="@+id/product_kategori"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/black"
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Egg"
            android:layout_toRightOf="@+id/product_name1"
            android:layout_below="@+id/product_kategori"
            android:layout_marginStart="8dp"/>
        <TextView android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/product_price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Price:"
            android:layout_toRightOf="@+id/product_img"
            android:layout_below="@+id/product_name"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/black"
            android:id="@+id/product_pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 fÃ¶r"
            android:layout_toRightOf="@+id/product_price1"
            android:layout_below="@+id/product_name"
            android:layout_marginStart="8dp"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/black"
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50 kr"
            android:layout_toRightOf="@+id/product_pre"
            android:layout_below="@+id/product_name"
            android:layout_marginStart="8dp"/>
        <TextView
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/product_store1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Store:"
            android:layout_toRightOf="@+id/product_img"
            android:layout_below="@+id/product_price"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/black"
            android:id="@+id/product_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lidl"
            android:layout_toRightOf="@+id/product_store1"
            android:layout_below="@+id/product_price"
            android:layout_marginStart="8sp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
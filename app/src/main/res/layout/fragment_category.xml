<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompareFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/sharp_corner_cardbord_90">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/my_primary"
            android:padding="12dp"
            android:text="Kategorier"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textTitle"
            android:layout_centerHorizontal="true"
            android:background="@color/empty"
            android:padding="16dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/buttonCategory1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:background="@drawable/custom_button"
                        android:text="Frukt &amp; Grönt"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/buttonCategory2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:background="@drawable/custom_button"
                        android:text="Färskvaror"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/buttonCategory3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:background="@drawable/custom_button"
                        android:text="Mejeri"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/buttonCategory4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:background="@drawable/custom_button"
                        android:text="Kött, Fågel &amp; Fisk"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/buttonCategory5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:background="@drawable/custom_button"
                        android:text="Skafferi"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/buttonCategory6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:background="@drawable/custom_button"
                        android:text="Övrigt"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/buttonCategory7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:background="@drawable/custom_button"
                        android:text="Kategori 7"
                        android:textAllCaps="false"
                        android:visibility="gone"/>

                    <Button
                        android:id="@+id/buttonCategory8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:background="@drawable/custom_button"
                        android:text="Kategori 8"
                        android:textAllCaps="false"
                        android:visibility="gone"/>

                </LinearLayout>

            </ScrollView>

        </RelativeLayout>



    </LinearLayout>

    <Switch
        android:id="@+id/switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/textTitle"
        android:paddingLeft="290dp"
        android:paddingTop="20dp"
        android:text="English"
        android:textColor="@color/white"
        android:textSize="16sp" />

</RelativeLayout>
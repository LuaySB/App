<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".CompareFragment">

    <View
        android:id="@+id/viewHeaderBackground"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/my_primary"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="Kategorier"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        android:fontFamily="cursive"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textTitle"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/buttonCategory1"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/custom_button"
            android:text="Frukt &amp; Grönt"
            android:textAllCaps="false"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonCategory2"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_margin="16dp"
            android:layout_toRightOf="@id/buttonCategory1"
            android:background="@drawable/custom_button"
            android:text="Färskvaror"
            android:textAllCaps="false"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonCategory3"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_below="@id/buttonCategory1"
            android:layout_margin="16dp"
            android:background="@drawable/custom_button"
            android:text="Mejeri"
            android:textAllCaps="false"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonCategory4"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_below="@id/buttonCategory1"
            android:layout_margin="16dp"
            android:layout_toRightOf="@id/buttonCategory3"
            android:background="@drawable/custom_button"
            android:text="Kött, Fågel &amp; Fisk"
            android:textAllCaps="false"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonCategory5"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_below="@id/buttonCategory3"
            android:layout_margin="16dp"
            android:background="@drawable/custom_button"
            android:text="Skafferi"
            android:textAllCaps="false"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonCategory6"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_below="@id/buttonCategory3"
            android:layout_margin="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_toRightOf="@id/buttonCategory5"
            android:background="@drawable/custom_button"
            android:text="Kategori 6"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:visibility="gone"/>

        <Button
            android:id="@+id/buttonCategory7"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_below="@id/buttonCategory5"
            android:layout_margin="16dp"
            android:background="@drawable/custom_button"
            android:text="Kategori 7"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:visibility="gone"/>

        <Button
            android:id="@+id/buttonCategory8"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_below="@id/buttonCategory5"
            android:layout_margin="16dp"
            android:layout_toRightOf="@id/buttonCategory7"
            android:background="@drawable/custom_button"
            android:text="Kategori 8"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:visibility="gone"/>

    </RelativeLayout>

</RelativeLayout>